<h2><%= @event.title %></h2>

<table border="1">
  <tr>
    <th>イベント詳細</th>
    <th>開催日</th>
    <th>参加期限</th>
  </tr>
  <tr>
    <%= content_tag :td, @event.detail %>
    <%= content_tag :td, l(@event.date) %>
    <%= content_tag :td, l(@event.deadline) %>
  </tr>
</table> 

<br>
<%= form_tag(action: :join, method: :post) do %>
  <%= text_field 'participant', 'name' %>
  <%= hidden_field 'event', 'id', :value => @event.id %>
  <%= button_tag('参加する') %>
<% end %>
<br>

<table border="1">
<th>参加者</th>
  </tr>
  <% @participants.each do |participant| %>
    <tr>
      <%= content_tag :td, participant.user_name %>
      <%= content_tag :td, participant.status %>
    </tr>
  <% end %>  
</table>

