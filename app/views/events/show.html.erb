<h2><%= @event.title %></h2>

<table border="1">
  <tr>
    <th>イベント詳細</th>
    <th>開催日</th>
    <th>参加期限</th>
  </tr>
  <tr>
    <%= content_tag :td, @event.detail %>
    <%= content_tag :td, l(@event.date) %>
    <%= content_tag :td, l(@event.deadline) %>
  </tr>
</table> 


<p><%= button_to('参加') %></p>

<table border="1">
<th>参加者</th>
  </tr>
  <% @participants.each do |participant| %>
    <tr>
      <%= content_tag :td, participant.user_name %>
    </tr>
  <% end %>  
</table>

